# Domain
PLATFORM_DOMAIN=your-domain.com

# Database
DB_NAME=minicloud
DB_USER=minicloud_user
DB_PASSWORD=your_secure_db_password_here

# Application
SECRET_KEY=your_super_secret_key_here_at_least_32_chars

# Redis
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# SSL/TLS
ACME_EMAIL=your-email@example.com

# Traefik Dashboard Auth (generate with: htpasswd -nb admin your_password)
TRAEFIK_AUTH=admin:$$apr1$$xyz$$abc123...

# Optional: Watchtower notifications
# WATCHTOWER_NOTIFICATION_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
